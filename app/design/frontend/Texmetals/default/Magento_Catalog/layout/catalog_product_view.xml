<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
        <!-- <move element="product.info.overview" destination="product.info.main" after="page.main.title"/> -->
        <referenceBlock name="breadcrumbs" remove="true" />
        <referenceBlock name="product.info.overview" remove="true" />
        <referenceBlock name="product.info.review" remove="true" />
        <referenceBlock name="product.info.price" remove="true" />
        <referenceBlock name="product.price.tier" remove="true" />
        <referenceBlock name="product.info.sku" remove="true" />
        <referenceBlock name="reviews.tab" remove="true" />
        <referenceBlock name="product.info.upsell" remove="true" />
        
        <move element="product.attributes" destination="product.info.main" before="product.info"/>
        <move element="product.info.stock.sku" destination="product.info.main" before="product.info"/>

	</body>
</page>
